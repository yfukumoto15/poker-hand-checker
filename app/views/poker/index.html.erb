<style>
  body {
    background: url('<%= asset_path "casino.png" %>') no-repeat center center fixed;
    background-size: cover;
  }
  .content-wrapper {
    background: rgba(255,255,255,0.85);
    border-radius: 16px;
    padding: 32px;
    max-width: 600px;
    margin: 40px auto;
    box-shadow: 0 4px 24px rgba(0,0,0,0.2);
  }
</style>
<div class="content-wrapper">
<h1>ポーカー役判定</h1>

<!-- 入力フォーム -->
<form action="/" method="post">
  <label for="cards">手札 (スペース区切り):</label>
  <input type="text" name="cards" id="cards" placeholder="S10 S11 S12 S13 SA">
  <input type="submit" value="判定する">
</form>

<!-- 判定結果表示 -->
<% if @result %>
  <p>手札: <%= @cards.join(' ') %></p>
  <% if @result.is_a?(Hash) && @result[:errors] %>
    <p style="color:red;">エラー: <%= @result[:errors].join(' / ') %></p>
  <% elsif @result.is_a?(Hash) && @result[:result] %>
    <p>判定結果: <%= @result[:result] %></p>
  <% else %>
    <p>判定結果: <%= @result %></p>
  <% end %>
<% end %>
</div>
